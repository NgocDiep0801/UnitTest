using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Arrays___01.Total_Sales
{
    public class Program
    {
        public static int TotalSale(int lenght)
        {
            var sales = new int[lenght];
            var total = 0;
            for (int i = 0; i < lenght; i++)
            {
                Console.WriteLine("Please enter the sales for day {0}:", i + 1);
                var sale = i;
                sales[0] = sale;
                total += sale;
            }
            Console.WriteLine("The total of your sales is: {0}", total);
            return total;
        }
    }
}
